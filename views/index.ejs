<%- include('partials/header.ejs') %>
     
     <!-- List section -->
     <section class="blogList-container container-fluid mt-5">
          <!-- <div class="d-flex justify-content-between align-items-center">
               <h2>Blogs</h2>
          </div>
          <hr> -->
          <div class="blogList-wrapper">
               <% if(allBlogs.length > 0) {%>
                    <% allBlogs.forEach(blog => { %>
                         <div class="blog mb-3">
                              <div class="card 100%">
                                   <div class="card-body">
                                   <h5 class="card-title"><%= blog.title %></h5>
                                   <p class="card-text"><%= blog.content %></p>
                                   <div class="option-container d-flex gap-2">
                                        <form action="/blog/<%= blog.id %>?_method=DELETE" method="POST">
                                             <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                        <a href="/blog/<%= blog.id %>/edit" class="btn btn-secondary">Edit</a>
                                   </div>
                                   </div>
                              </div>
                         </div>
                   <% }); %>
               <% } else { %>
                    <h5 class="mt-4 text-muted">There is no blog</h5>
               <% } %>
          </div>
     </section>

<%- include('partials/footer.ejs') %>